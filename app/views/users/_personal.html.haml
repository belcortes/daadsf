- if current_user
  %h3 My Account
  .height
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .row
        .personal.col-md-4#contact-info 
          Personal Information
          .account-box
            = f.label :name
            = f.text_field :name, value: current_user.name, id: 'name_field', :required => true
            %br
            = f.label :email
            = f.email_field :email, value: current_user.email, id: 'email_field'
            %br
            = f.label :phone
            = f.text_field :phone, value: current_user.phone, id: 'phone_field'
            %br
            = f.label :address
            = f.text_field :address, value: current_user.address, :required => true
            %br
            = f.label :zip
            = f.text_field :zip, value: current_user.zip, id: 'zip_field', :required => true
            %br
            = f.check_box :church, {:checked=>current_user.church}
            = f.label :church
            %br
            = f.check_box :school, {:checked=>current_user.school}
            = f.label :school
        .personal.col-md-4#certifications 
          Certifications
          .account-box
            = f.check_box :cert, {:checked=>current_user.cert}
            = f.label(:cert, 'CERT')
            %br
            = f.check_box :nert, {:checked=>current_user.nert}
            = f.label(:nert, 'NERT')
            %br
            = f.check_box :cpr, {:checked=>current_user.cpr}
            = f.label(:cpr, 'CPR')
            %br
            = f.check_box :safe, {:checked=>current_user.safe}
            = f.label(:safe, 'SAFE')
            %br
            = f.check_box :first_aid, {:checked=>current_user.first_aid}
            = f.label(:first_aid, 'First Aid')
            %br
            = f.check_box :first_reponder, {:checked=>current_user.first_reponder}
            = f.label(:first_reponder, 'First Responder')
        .personal.col-md-4#user-buildings 
          Certificated Skills - Trade
          .account-box
            = f.check_box :inspector,{:checked=>current_user.inspector}
            = f.label(:inspector, 'Building Inspector')
            %br
            = f.check_box :carpenter,{:checked=>current_user.carpenter}
            = f.label :carpenter
            %br
            = f.check_box :commercial,{:checked=>current_user.commercial}
            = f.label(:commercial, 'Commercial License')
            %br
            = f.check_box :electrician,{:checked=>current_user.electrician}
            = f.label 'Electrician'
            %br
            = f.check_box :contractor,{:checked=>current_user.contractor}
            = f.label(:contractor, 'General Contractor')
            %br
            = f.check_box :operator,{:checked=>current_user.operator}
            = f.label(:operator, 'Heavy Equipment Operator')
            %br
            = f.check_box :plumber,{:checked=>current_user.plumber}
            = f.label :plumber
            %br
            = f.check_box :engineer,{:checked=>current_user.engineer}
            = f.label(:engineer,'Structural Engineer')
      %br
      .personal#user-resources 
        Resources
        .account-box.row
          .col-md-3
            Facilities
