                $('#dc-resources').hide();
                $('#busi').show();
                $('#neighbor').show();
                $('#community').show();
                $('#sf-eh').show();
                $('#disaster').show();
                map.panTo(new google.maps.LatLng(37.769884, -122.459793));
                map.setZoom(12);
                google.maps.event.addListener(marker, 'click', function() {
                  infowindow.open(map,marker);
