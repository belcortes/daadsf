<div class="modal fade in" id="breakingnews">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">x</button>
    <h2>Add your Breaking News</h2>
  </div>
  <div class="modal-body">
    <%= form_tag(:remote => true) do %>
    <div><%= label_tag 'Message' %><br />
    <%= text_field_tag :news %></div>
    <%= submit_tag "Submit", :class => 'btn btn-small btn-success' %>
    <% end %>
  </div>
</div>