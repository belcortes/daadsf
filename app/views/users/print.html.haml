#user-print
  %head
    = stylesheet_link_tag    "application", media: "all" #, "data-turbolinks-track" => true
  %body
    .print-header
      %a(href='/')
        =image_tag("appa_logo3.png",width:'300px')
      Community Resources - San Francisco, CA
      %br
      %br
      = link_to "CSV", user_print_path(format: "csv"), class: 'map-buttons2'
      = link_to "Excel", user_print_path(format: "xls"), class: 'map-buttons2'
      = link_to "Print", 'javascript:window.print()', class: 'map-buttons2'
    %br
    %table.user-table
      %tr
        %th.blue2 Certifications
        %th NERT
        %th CERT
        %th CPR
        %th SAFE
        %th First Aid
        %th First Responder
        %th Light Search & Rescue
      - @user.all.each do |u|
        %tr
          %th{style: 'min-width: 140px;'}
            = u.name
            %br
            = u.address
            = u.address2
          - u.attributes.each do |attr_name, attr_value|
            - if attr_name == 'cert'
              %td
                = image_tag("#{attr_value}.png", size: "20x20")
            - if attr_name == 'nert'
