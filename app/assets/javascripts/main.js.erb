function boolean_quantities() {
  $('#user-resources').find('select').hide()
  $('#user-resources').find('input').on('click', function(){
    if ($(this).is(':checked') == true) {
      $(this).next().show()
      $(this).next().val(1)
    } else {
      $(this).next().hide()
      $(this).next().val(0)
    }
  })
  $("#user-resources").find("input:checked").next().show()
}

