#user-print
  %head
    = stylesheet_link_tag    "application", media: "all" #, "data-turbolinks-track" => true
  %body
    .print-header
      %a(href='/')
        =image_tag("appa_logo3.png",width:'300px')
      Community Resources - San Francisco, CA
      %br
      %br
      = link_to "CSV", user_print_path(format: "csv"), class: 'map-buttons2'
      = link_to "Excel", user_print_path(format: "xls"), class: 'map-buttons2'
      = link_to "Print", 'javascript:window.print()', class: 'map-buttons2'
    %br
    %table.user-table
      %tr
        %th
        %th NERT
        %th CERT
        %th CPR
        %th SAFE
        %th First Aid
        %th Dump Truck
        %th Backhoe
        %th Fork Lift
        %th Fuel
        %th Generator
        %th Jack Hammer
        %th Emergency Kit
        %th Drill
        %th Hammer
        %th Shovel
        %th Engineer
        %th General Contractor
        %th Church
        %th School
        %th Underground Shelter
        %th Overnight Shelter
        %th Oxygen
        %th Wheelchair
        %th Defibrillator
        %th First Responder
        %th Building Inspector
        %th Commercial License
        %th Electrician
        %th Carpenter
        %th Heavy Equipment Operator
        %th Plumber
        %th Commercial Kitchen
        %th Bulldozer
        %th Excavator
        %th Front Loader
        %th Reclaimer
        %th Trencher
        %th Tractor
        %th Goggles
        %th Axe
      - @user.all.each do |u|
        %tr
          %th{style: 'min-width: 140px;'}
            = u.name
            %br
            = u.address
            = u.address2
          - u.attributes.each do |attr_name, attr_value|
            - if attr_value == true || attr_value == false
              %td
                = image_tag("#{attr_value}.png", size: "20x20")