- if current_user
  %h3 My Account
  .height
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .row
        .personal.col-md-4#contact-info 
          Personal Information
          .account-box
            = f.label :name
            = f.text_field :name, value: current_user.name, id: 'name_field', :required => true
            %br
            = f.label :email
            = f.email_field :email, value: current_user.email, id: 'email_field'
            %br
            = f.label :phone
            = f.text_field :phone, value: current_user.phone, id: 'phone_field'
            %br
            = f.label :address
            = f.text_field :address, value: current_user.address, id: 'address_field', :required => true
            %br
            = f.label :address2
            = f.text_field :address2, value: current_user.address2
            %br
            = f.label :city
            = f.text_field :city, value: current_user.city, id: 'city_field', value: "San Francisco"
            %br
            = f.label :state
            = select_tag(options_for_select([['NY'], ['CA']]))
            / # = f.text_field :state, value: current_user.state, id: 'state_field', :required => true
            %br
            = f.label :zip
            = f.text_field :zip, value: current_user.zip, id: 'zip_field', :required => true
            %br
            = f.check_box :church, {:checked=>current_user.church}
            = f.label :church
            %br
            = f.check_box :school, {:checked=>current_user.school}
            = f.label :school
        .personal.col-md-4#certifications 
          Certifications
          .account-box
            = f.check_box :cert, {:checked=>current_user.cert}
            = f.label(:cert, 'CERT')
            %br
            = f.check_box :nert, {:checked=>current_user.nert}
            = f.label(:nert, 'NERT')
            %br
            = f.check_box :cpr, {:checked=>current_user.cpr}
