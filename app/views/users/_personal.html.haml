            %br
            = f.check_box :firstaid, {:checked=>current_user.firstaid}
            = f.label(:firstaid, 'First Aid')
            %br
            = f.check_box :firstresponder, {:checked=>current_user.firstresponder}
            = f.label(:firstresponder, 'First Responder')
        .personal.col-md-4#user-buildings 
