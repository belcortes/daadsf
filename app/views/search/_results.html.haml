/ - if @search != ' '
#results.container2
  =image_tag asset_path('x.png'), :class => 'close'
  %h3
    Results
  .height
    - @results.each do |r|
      - case r.class.name
        - when 'User'
          %h4.result-name.blue.name
            = r.name
          %span.italic{:style => "color:#1371bb" } Contact this owner
          / .user-attr
          %br
          %h4 Certifications:
          - r.attributes.each do |attr_name, attr_value|
            - if attr_value == true && attr_name == 'cert'
              &nbsp;&nbsp; - CERT
              %br  
            - if attr_value == true && attr_name == 'nert'
              &nbsp;&nbsp; - NERT
              %br
            - if attr_value == true && attr_name == 'cpr'
              &nbsp;&nbsp; - CPR
              %br
            - if attr_value == true && attr_name == 'safe'
              &nbsp;&nbsp; - SAFE
              %br
            - if attr_value == true && attr_name == 'first_aid'
              .resource_links#resource_first
                &nbsp;&nbsp; - First Aid
          %h4 Skills:
          .user-attr
            - r.attributes.each do |attr_name, attr_value|
              - if attr_value == true && attr_name == 'contractor'
                &nbsp;&nbsp; - Contractor
                %br
              - if attr_value == true && attr_name == 'engineer'
                &nbsp;&nbsp; - Engineer
                %br
              - if attr_value == true && attr_name == 'mechanic'
                &nbsp;&nbsp; - Mechanic
                %br
              - if attr_value == true && attr_name == 'healthcare'
                &nbsp;&nbsp; - Healthcare
                %br
          %h4 Resources:
          %h5 &nbsp;&nbsp; Facility
          .user-attr
            - r.attributes.each do |attr_name, attr_value|
              - if attr_value == true && attr_name == 'church'
                &nbsp;&nbsp; - Church
                %br
              - if attr_value == true && attr_name == 'school'
                &nbsp;&nbsp; - School
                %br
              - if attr_value == true && attr_name == 'bomb_shelter'
                &nbsp;&nbsp; - Bomb Shelter
                %br
              - if attr_value == true && attr_name == 'hurricane_shelter'
                &nbsp;&nbsp; - Hurricane Shelter
                %br
          %h5 &nbsp;&nbsp; Medical
          .user-attr
            - r.attributes.each do |attr_name, attr_value|
              - if attr_value == true && attr_name == 'oxygen'
                &nbsp;&nbsp; - Oxygen
                %br
              - if attr_value == true && attr_name == 'wheel_chair'
                .resource_links#resource_wheelchair
                  &nbsp;&nbsp; - Wheel Chair
              - if attr_value == true && attr_name == 'defibrillation'
                .resource_links#resource_defib
                  &nbsp;&nbsp; - Defibrillation
          %h5 &nbsp;&nbsp; Equipment - Heavy
          .user-attr
            - r.attributes.each do |attr_name, attr_value|
              - if attr_value == true && attr_name == 'dump_truck'
                &nbsp;&nbsp;&nbsp; - Dump Truck
                %br
              - if attr_value == true && attr_name == 'back_hoe'
                .resource_links#resource_backhoe
                  &nbsp;&nbsp;&nbsp; - Back Hoe
              - if attr_value == true && attr_name == 'crane'
                &nbsp;&nbsp;&nbsp; - Crane
                %br
              - if attr_value == true && attr_name == 'fork_lift'
                &nbsp;&nbsp;&nbsp; - Fork Lift
                %br
              - if attr_value == true && attr_name == 'fuel'
                &nbsp;&nbsp;&nbsp; - Fuel
                %br
              - if attr_value == true && attr_name == 'air_compressor'
                &nbsp;&nbsp;&nbsp; - Air Compressor
                %br
              - if attr_value == true && attr_name == 'truck'
                &nbsp;&nbsp;&nbsp; - Truck
                %br
              - if attr_value == true && attr_name == 'power_generator'
                &nbsp;&nbsp;&nbsp; - Power Generator
                %br
              - if attr_value == true && attr_name == 'bus'
                &nbsp;&nbsp;&nbsp; - Bus
                %br
              - if attr_value == true && attr_name == 'saw'
                &nbsp;&nbsp;&nbsp; - Saw
                %br
              - if attr_value == true && attr_name == 'lathe'
                &nbsp;&nbsp;&nbsp; - Lathe
                %br
              - if attr_value == true && attr_name == 'plow'
                &nbsp;&nbsp;&nbsp; - Plow
                %br
              - if attr_value == true && attr_name == 'jack_hammer'
                &nbsp;&nbsp;&nbsp; - Jack Hammer
                %br
          %h5 &nbsp;&nbsp; Equipment - Light
          .user-attr
            - r.attributes.each do |attr_name, attr_value|
              - if attr_value == true && attr_name == 'emergency_kit'
                &nbsp;&nbsp;&nbsp; - Emergency Kit
                %br
              - if attr_value == true && attr_name == 'drill'
                &nbsp;&nbsp;&nbsp; - Drill
                %br
              - if attr_value == true && attr_name == 'hammer'
                &nbsp;&nbsp;&nbsp; - Hammer
                %br
              - if attr_value == true && attr_name == 'survival_kit'
                &nbsp;&nbsp;&nbsp; - Survival Kit
                %br
              - if attr_value == true && attr_name == 'shovel'
                &nbsp;&nbsp;&nbsp; - Shovel
                %br
          %br
        - when 'CoolingCenters'
          %h4.result-name
            = r.name
          Address:
          = r.address
          %br
          City:
          = r.city
          %br
          State:
          = r.state
          %br
          Center Type:
          = r.center_type
          %br
          %br